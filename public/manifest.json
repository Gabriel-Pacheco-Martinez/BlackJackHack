{
  "manifest_version": 3,
  "name": "Blackjack Helper - Iteration 2",
  "version": "0.1.1",
  "description": "F010 (MD), F006 - Game Interception (FC)",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*blackjack*",
    "*://*/*casino*",
    "*://*/*21*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["src/content/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "wizard.png",
      "48": "wizard.png",
      "128": "wizard.png"
    }
  },
  "icons": {
    "16": "wizard.png",
    "48": "wizard.png",
    "128": "wizard.png"
  }
}